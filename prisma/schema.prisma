generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


model FeriaCard {
  cardCode                 String   @id
  name                     String
  amount             Float
  redeemed           Boolean
  redeemedWallet     String?
  redeemedChain      ChainEnum?
  redeemedCoin       CoinEnum?
  redeemedAt         DateTime?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

enum ChainEnum {
  STARKNET
}

enum CoinEnum {
  USDC
  USDT
  DAI
  ETH
  STRK
}